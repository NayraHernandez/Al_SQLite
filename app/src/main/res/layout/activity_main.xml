<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/et1"
        android:hint="Ingrese codigo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/et2"
        android:hint="Ingrese descripcion"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignRight="@+id/et1"
        android:layout_below="@+id/et1"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/et3"
        android:hint="ingrese precio"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignEnd="@+id/et2"
        android:layout_alignRight="@+id/et2"
        android:layout_below="@+id/et2"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et3"
        android:onClick="alta"
        android:text="Alta"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button"
        android:onClick="consultaporcodigo"
        android:text="Consulta por codigo"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:onClick="consultapordescripcion"
        android:text="Consulta por descripcion"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:onClick="bajaporcodigo"
        android:text="Baja por codigo"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button4"
        android:onClick="modificacion"
        android:text="Modificacion"/>

</RelativeLayout>